<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema Bancario</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header">
            <a class="navbar-brand" href="~/Home">
            <i class="fa fa-university" aria-hidden="true"></i> Sistema Bancario</a>
        </div>
    </nav>
    <div class="col-sm-2 top-margin">
        <ul class="nav nav-pills nav-stacked">
            <li role="presentation" class="@ViewBag.ActiveHome"><a href="~/Home"><i class="fa fa-home fa-lg" aria-hidden="true"></i> Home</a></li>
            <li role="presentation" class="@ViewBag.ActiveNew"><a href="~/Home/NuevaCuenta"><i class="fa fa-plus-circle fa-lg" aria-hidden="true"></i> Nueva Cuenta</a></li>
        </ul>
    </div>
    <div class="col-sm-10">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
