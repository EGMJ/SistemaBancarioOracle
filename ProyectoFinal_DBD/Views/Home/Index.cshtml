@using ProyectoFinal_DBD.Models
@model List<CuentaModel>
@{
    ViewBag.Title = "Home Page";
}
<div class="page-header">
    <h2>Listado de Cuentas <small>Sistema Bancario</small></h2>
</div>
<table class="table table-striped">
    <thead>
        <tr class="txt-centered">
            <th>NO. CUENTA</th>
            <th>NOMBRE</th>
            <th>APELLIDO</th>
            <th>INTERES</th>
            <th>SALDO</th>
            <th>STATUS</th>
            <th class="txt-centered">-</th>
        </tr>
    </thead>
    <tbody>
        @foreach (CuentaModel cuenta in Model)
        {
            <tr>
                <td>@cuenta.Cuenta</td>
                <td>@cuenta.Nombre</td>
                <td>@cuenta.Apellido</td>
                <td>@String.Format("{0:0.00}%", cuenta.Interes)</td>
                <td>@String.Format("{0:C2}", cuenta.Saldo)</td>
                <td>
                    @if (cuenta.Status == "X")
                    {
                        <i class="fa fa-check text-success" aria-hidden="true"></i>
                    }
                    else
                    {
                        <i class="fa fa-ban text-danger" aria-hidden="true"></i>
                    }
                </td>
                <td class="txt-centered">
                    <div class="btn-group btn-group-sm">
                        <!-- Acciones para cuentas activas -->
                        @if (cuenta.Status == "X")
                        {
                            @Html.ActionLink("Modificar", "ModificarCuenta", "Home", new { Cuenta = cuenta.Cuenta, Nombre = cuenta.Nombre, Apellido = cuenta.Apellido, Saldo = cuenta.Saldo, Interes = cuenta.Interes, Status = cuenta.Status }, new { @class = "btn btn-primary" });
                            @Html.ActionLink("Eliminar", "EliminarEmpleado", "Home", new { cuenta = cuenta.Cuenta }, new { @class = "btn btn-danger" });
                        }
                        // Acciones para cuentas inactivas
                        else
                        {
                            
                        }
                        @*@Html.ActionLink("Eliminar", "EliminarEmpleado", "Home", new { id = @empleado.IdEmpleado }, new { @class = "btn btn-danger" })*@
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>